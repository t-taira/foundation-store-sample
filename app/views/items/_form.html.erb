<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :name, class: "right inline" %>
      </div>
      <div class="small-9 columns"><%= f.input :name, label: false %></div>
    </div>

    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :price, class: "right inline" %>
      </div>
      <div class="small-9 columns"><%= f.input :price, label: false %></div>
    </div>

    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :published_on, class: "right inline" %>
      </div>
      <div class="small-9 columns"><%= f.input :published_on, as: :datepicker, label: false %></div>
    </div>
  </div>

  <div class="row collapse">
    <div class="small-9 small-offset-3 columns"><%= f.submit class: 'button radius' %></div>
  </div>
<% end %>
